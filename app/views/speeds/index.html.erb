<p id="notice"><%= notice %></p>

<h1>Listing Speeds</h1>

<table class="data">
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Down</th>
      <th>Up</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @speeds.each do |speed| %>
      <tr>
        <td class='date'><%= speed.date.strftime("%m/%d/%Y")%></td>
        <td class='date'><%= speed.time.strftime("%I:%M%p")%></td>
        <td class='num'><%= speed.down %>Mbps</td>
        <td class='num'><%= speed.up %>Mbps</td>
        <td class="control"><%= link_to  speed do %><span class="glyphicon glyphicon-eye-open"></span><% end %></td>
        <td class="control"><%= link_to  edit_speed_path(speed) do %><span class="glyphicon glyphicon-pencil"></span><% end %></td>
        <td class="control"><%= link_to  speed, method: :delete, data: { confirm: 'Are you sure?' } do %><span class="glyphicon glyphicon-trash"></span><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Speed', new_speed_path %>

